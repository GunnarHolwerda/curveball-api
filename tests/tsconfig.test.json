{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2015"
        ],
        "allowJs": false,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./tests",
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true,
        "types": [
            "node",
            "jasmine"
        ],
    },
    "include": [
        "api/**/*",
        "unit/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".serverless",
        ".build",
        "dist",
    ]
}